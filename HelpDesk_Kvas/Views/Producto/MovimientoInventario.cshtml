
@{
    ViewBag.Title = "MovimientoInventario";
}



<section class="content-header">
    <h1>
        Tablero
        <small>@ViewBag.Title</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Inicio</a></li>
        <li class="active">Dashboard</li>
    </ol>
</section>
<br /><br />

<section class="content">
    <table id="encabezado" class="table">
        <thead>
            <tr style="font-size:20px;">
                <td style="float:right; vertical-align:middle;">Detalles del Producto</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            <tr style="font-size:20px;">
                <td style="float:right; vertical-align:middle;">
                    @using (Ajax.BeginForm("Create", "Producto", new AjaxOptions { HttpMethod = "POST", OnSuccess = "onAjaxRequestSuccess" }, new { @id = "AjaxformId", @class = "form-horizontal", role = "form" }))
                    {
                        <label>Buscar:</label>
                        <input id="" name="" type="text" />
                    }
                </td>
                <td>
                   
                    <div class="form-group col-md-12">
                        <div class="col-md-9 dropdown">
                            
                            @*@Html.DropDownList("ListaProducto", ViewBag.ListaProducto as SelectList, "Seleccione un Producto", htmlAttributes: new { @class = "form-control" })*@
                        </div>
                        <div class="col-md-3">
                            <button class="btn btn-info btn-md" name="btnproductos" id="btnproductos">Seleccionar</button>
                        </div>
                    </div>

                </td>
            </tr>
        </tbody>
    </table>
    <form action="javascript:fn_agregar()" ; method="post" id="frm_usu" class="form-horizontal">
        <table class="table">
            <tr>
                <td>Id <input style="font-size:20px;" type="text" id="idproducto" class="form-control" readonly required /></td>
                <td>Sku <input style="font-size:20px;" type="text" id="idproducto" class="form-control" readonly required /></td>
                <td>Nombre<input style="font-size:20px; font-weight:700;" class="form-control" type="text" id="nombreproducto" readonly required /></td>
                <td>Pvp. Compra<input style="font-size:20px; font-weight:700;" type="number" id="precio" class="form-control" value="Ingrese Cantidad" onfocus="this.value = '';" required  /></td>
                <td>Pvp. Venta <input style="font-size:20px; font-weight:700;" type="number" id="idproducto" class="form-control" value="Ingrese Cantidad" onfocus="this.value = '';" required  /></td>
                <td>Cantidad <input style="font-size:20px; font-weight:700;" class="form-control" type="number" id="cantidad" value="Ingrese Cantidad" onfocus="this.value = '';" required /></td>
                <td colspan="2"><input class="btn btn-info btn-md" type="submit" name="agregar" id="agregar" value="Agregar" /></td>
            </tr>
        </table>
    </form>
    <table id="detalle" class="lista table" border="1">
        <thead>
            <tr>
            </tr>
            <tr class="bg-danger">
                <th>Id</th>
                <th>SKU</th>
                <th>Descripcion del Producto</th>
                <th>Cantidad</th>
                <th>Pvp. Compra</th>
                <th>Pvp. Venta</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody></tbody>

    </table>
    <table class="table">
        <tr>
            <td style="float:right;font-size:20px;">Total Costo Inventario</td>
            <th></th>
            <td><input style="font-size:20px; font-weight:700;" class="form-control" type="text" name="TotalaPagar" id="TotalaPagar" required readonly /></td>
        </tr>
    </table>
    <input class="btn btn-success btn-md" type="button" id="finalizar" value="Guardar" />
</section>




