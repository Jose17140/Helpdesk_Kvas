@model HelpDesk_Kvas.DataGrid.PagedList<HelpDesk_Kvas.Models.Datos.Entity.ProductosEntityView>
@{
    ViewBag.Title = "Listado de Productos";
}

@Styles.Render("~/Content/css/Grupos.css")
@Scripts.Render("~/bundles/jquery")
<section class="content-header">
    <h1>
        Tablero
        <small><span class="glyphicon glyphicon-shopping-cart"></span> @ViewBag.Title</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Inicio</a></li>
        <li class="active">Productos</li>
    </ol>
    <br />
</section>
<br />
<div class="well">
    @using (Html.BeginForm("index", null, FormMethod.Get))
    {
        <div class="row">
            <div class="col-sm-4">
                <div class="input-group">

                    <input type="text"
                           name="filter"
                           value="@ViewBag.filter"
                           class="form-control"
                           style="display: inline"
                           placeholder="Buscar..." />
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="submit">Buscar</button>
                    </span>

                </div>
            </div>
            <div class="pull-right col-lg-1">
                <a class="btn btn-success" data-modal="" href="/Producto/Create" id="btnCreate">
                    <span class="glyphicon glyphicon-plus"></span>
                </a>
            </div>
        </div>

        <div style="margin-top:17px;">
            @{
                var grid = new WebGrid(
                            canPage: true,
                            rowsPerPage: Model.PageSize,
                            canSort: true,
                            ajaxUpdateContainerId: "grid");

                grid.Bind(Model.Content, rowCount: Model.TotalRecords, autoSortAndPage: false);
                grid.Pager(WebGridPagerModes.All);

                @grid.GetHtml(htmlAttributes: new { id = "grid" },   // id for ajaxUpdateContainerId parameter
                 fillEmptyRows: false,
                 tableStyle: "table table-bordered table-hover",
                 mode: WebGridPagerModes.All,
                 columns: grid.Columns(
                   grid.Column("IdProducto", "ID"),
                   grid.Column("Sku", "Sku"),
                   grid.Column("Nombre", "Nombre"),
                   grid.Column("Fabricante", "Fabricante"),
                   grid.Column("Categoria", "Categoría"),
                   grid.Column("Stock", "Inventario"),
                   grid.Column("PrecioCompra", "Pvp. Compra", format: @<text>@Html.Raw("<text>Bs. " + item.PrecioCompra + "</text>")</text>),
                 grid.Column("PrecioVenta", "Pvp. Venta", format: @<text>@Html.Raw("<text>Bs. " + item.PrecioVenta + "</text>")</text>),
                 grid.Column("Imagen", header: "Imagen", format: @<text>@Html.Raw("<img style='width:50px;' src='/Content/images/Productos/" +item.Imagen+"' alt='Imagen'> ")</text>),

                 grid.Column("Estatus", header: "Estatus", format: @<text>
                @if (item.Estatus == true) {
                            @Html.Raw("<span class='label label-success'>Activo</span>")
                        }
                         @if (item.Estatus == false) {
                             @Html.Raw("<span class='label label-danger'>Inactivo</span>")
                         }
                </text>),
                grid.Column(header: "Acciones", canSort: false, style: "action",
                  format: @<text>
                    @*@Html.Raw("<a data-modal='' href='/Producto/details/" + item.IdProducto + "' id='" + item.IdProducto + "' title='Detalle'> <span class='glyphicon glyphicon-search'> </span> </a>")*@

                    @if (User.IsInRole("Master") || User.IsInRole("Supervisor"))
                    {
                        @Html.Raw("<a data-modal='' href='/Producto/edit/" + item.IdProducto + "' id='" + item.IdProducto + "' title='Editar'> <span class='glyphicon glyphicon-edit'> </span> </a>")
                        @Html.Raw("<a data-modal='' href='/Producto/delete/" + item.IdProducto + "' id='" + item.IdProducto + "' title='Eliminar'> <span class='glyphicon glyphicon-trash'> </span> </a>")
                    }
                </text>)
             ));
            }
        </div>
    }
</div>

<!-- modal placeholder-->
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>
<script src="~/Content/js/PruebaModal.js"></script>