@model HelpDesk_Kvas.Models.Datos.Entity.UsuarioLogEntity
@{
    Layout = null;
}

<li class="dropdown user user-menu">
    <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage" class="dropdown-toggle" data-toggle="dropdown">
        <img src="~/Content/images/img/@ViewBag.Avatar" class="user-image" alt="User Image">
        <span class="hidden-xs">Hola @HttpContext.Current.User.Identity.Name! </span>
    </a>
    <ul class="dropdown-menu">
        <!-- User image -->
        <li class="user-header">
            <img src="~/Content/images/img/@ViewBag.Avatar" class="img-circle" alt="User Image">
            <p>
                @HttpContext.Current.User.Identity.Name
                <small>Roles <strong>@ViewBag.Rol</strong></small>
                <small>Ultima Conexion @ViewBag.Log</small>
            </p>
        </li>
        <!-- Menu Body -->
        <li class="user-body">
            @*<div class="row">
                <div class="col-xs-4 text-center">
                    <a href="#">Followers</a>
                </div>
                <div class="col-xs-4 text-center">
                    <a href="#">Sales</a>
                </div>
                <div class="col-xs-4 text-center">
                    <a href="#">Friends</a>
                </div>
            </div>*@
            <!-- /.row -->
        </li>
        <!-- Menu Footer-->
        <li class="user-footer">
            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
            {
                @Html.AntiForgeryToken()
                <div class="pull-left">
                    <a href="#" class="btn btn-default btn-flat">Perfil</a>
                </div>
                <div class="pull-right">
                    <a href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-default btn-flat">Cerrar Sesion</a>
                </div>
            }
        </li>
    </ul>
</li>