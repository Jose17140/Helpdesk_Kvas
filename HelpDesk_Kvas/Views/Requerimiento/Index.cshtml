@model PagedList.IPagedList<HelpDesk_Kvas.Models.Datos.Entity.RequerimientoViewEntity>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Requerimientos";
}

@Styles.Render("~/Content/css/Grupos.css")
@Scripts.Render("~/bundles/jquery")

<section class="content-header">
    <h1>
        Tablero
        <small>@ViewBag.Title</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Inicio</a></li>
        <li class="active">Dashboard</li>
    </ol>
    <br />
</section>
<br />
<section class="content">

    @using (Html.BeginForm("Index", "Requerimiento", FormMethod.Get))
    {
        <p>
            Buscar: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
            <input type="submit"  value="Buscar" />
        </p>
    }
    <table class="table table-hover">
        <tr>
            <th>
                #
            </th>
            <th>
                @Html.ActionLink("Fecha", "Index", new { sortOrder = ViewBag.DateSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Cliente", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                Equipo
            </th>
            <th>
                Falla
            </th>
            <th>
                Tecnico
            </th>
            <th>
                @Html.ActionLink("Estatus", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Prioridad", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdRequerimiento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaEntrada)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombres)<br />
                    <i class="fa fa-phone"></i>
                    @Html.DisplayFor(modelItem => item.Telefonos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Equipo)<br />
                    <span>@Html.DisplayFor(modelItem => item.Modelo)</span>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Falla)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tecnico)
                </td>
                <td>
                    @if (item.IdEstatus == 61)
                    {
                        <span class="label label-default">@Html.DisplayFor(modelItem => item.Estatus)</span>
                    }
                    else if (item.IdEstatus == 62)
                    {
                        <span class="label label-info">@Html.DisplayFor(modelItem => item.Estatus)</span>
                    }
                    else if (item.IdEstatus == 63)
                    {
                        <span class="label label-warning">@Html.DisplayFor(modelItem => item.Estatus)</span>
                    }
                    @if (item.IdEstatus == 143)
                    {
                        <span class="label label-primary">@Html.DisplayFor(modelItem => item.Estatus)</span>
                    }
                    else if (item.IdEstatus == 144)
                    {
                        <span class="label label-success">@Html.DisplayFor(modelItem => item.Estatus)</span>
                    }
                    else if (item.IdEstatus == 145)
                    {
                        <span class="label label-danger">@Html.DisplayFor(modelItem => item.Estatus)</span>
                    }
                    @if (item.IdEstatus == 166)
                    {
                        <span class="label label-success">@Html.DisplayFor(modelItem => item.Estatus)</span>
                    }
                    else if (item.IdEstatus == 147)
                    {
                        <span class="label label-danger">@Html.DisplayFor(modelItem => item.Estatus)</span>
                    }
                </td>
                <td>
                    @if (item.IdPrioridad == 119)
                    {
                        <span class="label label-success">@Html.DisplayFor(modelItem => item.Prioridad)</span>
                    }
                    else if (item.IdPrioridad == 120)
                    {
                        <span class="label label-warning">@Html.DisplayFor(modelItem => item.Prioridad)</span>
                    }
                    else if (item.IdPrioridad == 121)
                    {
                        <span class="label label-danger">@Html.DisplayFor(modelItem => item.Prioridad)</span>
                    }
                </td>
                <td>
                    <!-- Single button -->
                    <div class="btn-group">
                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Acciones <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="/Requerimiento/Details/@item.IdRequerimiento" title="Detalles">Detalle</a></li>
                            @if (User.IsInRole("Cliente") == false)
                            {
                                <li><a href="/Requerimiento/Asignar/@item.IdRequerimiento" title="Asignar">>Asignar</a></li>
                                <li><a href="#" title="Presupuestar">Presupuesto</a></li>
                                <li><a href="#" title="Editar">Editar</a></li>
                            }
                        </ul>
                    </div>
                </td>
            </tr>
        }
    </table>
    <br />
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index",
            new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
</section>