@model IEnumerable<HelpDesk_Kvas.Models.Datos.Entity.GruposEntity>
@using PagedList.Mvc;
@{
    ViewBag.Title = "ElegirDepartamento";
}
@Styles.Render("~/Content/css/Grupos.css")
<section class="content-header">
    <h1>
        Tablero
        <small>@ViewBag.Nombre</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Inicio</a></li>
        <li class="active">Dashboard</li>
    </ol>
    <br />
</section>
<br />

<section class="content">

    <div class="box">
        <div class="box-body">
            @foreach (var i in Model)
            {
                <div class="btn dropdown">
                    <a class="btn btn-apps dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false" style="height:300px; width:300px;" href="/">
                        <span class="@i.Icono" style="font-size:150px;"></span>
                        <span style="font-size:25px;">Departamento de:</span>
                        <br />
                        <span class="glyphicon-class" style="font-size:25px;">@i.Titulo</span>
                    </a>
                </div>
            }
        </div>
    </div>



</section>