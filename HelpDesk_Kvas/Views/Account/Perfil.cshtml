                                <div class="col-lg-4 col-md-4 col-sm-4" style="padding-bottom: 10px;">
                                    <div class="btn-group" role="group" aria-label="...">
                                        <div class="btn-group" role="group">
                                            @Html.LabelFor(m => m.UserName)
                                            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-4 col-sm-4" style="padding-bottom: 10px;">
                                    <div class="btn-group" role="group" aria-label="...">
                                        <div class="btn-group" role="group">
                                            @Html.LabelFor(m => m.IdRoles)
                                            @Html.EditorFor(model => model.Rol, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.IdRoles, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
