@model HelpDesk_Kvas.Models.Datos.Entity.UsuarioViewEntity
@{
    ViewBag.Title = "Perfil";
}

@Styles.Render("~/Content/css/Grupos.css")
@Scripts.Render("~/bundles/jquery")

<section class="content-header">
    <h1>
        Tablero
        <small><span class="fa fa-user"></span>  @ViewBag.Title</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Perfil de Usuario</a></li>
        <li class="active">Dashboard</li>
    </ol>
</section>
<br />
<section class="content">
