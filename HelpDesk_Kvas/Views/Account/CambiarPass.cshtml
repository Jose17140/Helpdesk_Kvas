@model HelpDesk_Kvas.Models.Datos.Entity.RecuperarContrasenaUserEntity
@{
    ViewBag.Title = "Cambiar Contraseña";
    Layout = null;
}
<br />

<div class="login-screen"></div>
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 class="modal-title"><span class="fa fa-unlock-alt"></span> @ViewBag.Title</h3>
</div>
<div class="modal-body">
    @using (Ajax.BeginForm("CambiarPass", "Account", new AjaxOptions { HttpMethod = "POST", OnSuccess = "onAjaxRequestSuccess" }, new { @id = "AjaxformId", @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div>@Html.ValidationSummary("", new { @class = "text-default" })</div>
        <div class="modal-body" style="padding: 5px;">
            <div class="row">
                <input type="hidden" value="@ViewBag.IdUsuario" id="IdUsuario" name="IdUsuario" />
                <div class="col-lg-6 col-md-6 col-sm-6" style="padding-bottom: 10px;">
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Nueva Contraseña", style = "backface-visibility: hidden;" })
                    <span>@Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })</span>
                    <br />
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6" style="padding-bottom: 10px;">
                    @Html.LabelFor(m => m.ConfirmPassword)
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirme Contraseña", style = "backface-visibility: hidden;" })
                    <span>@Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })</span>
                    <br />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </div>
        </div>

    }
</div>
<script>
    $("form").removeData("validator");
    $("form").removeData("unobtrusiveValidation");
    $.validator.unobtrusive.parse("form");
</script>

