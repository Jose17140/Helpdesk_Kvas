@{
    ViewBag.Title = "Index";
}
@Styles.Render("~/Content/css/Grupos.css")
@Scripts.Render("~/bundles/jquery")

<section class="content-header">
    <h1>
        Tablero
        <small>Lista Clientes</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Inicio</a></li>
        <li class="active">Dashboard</li>
    </ol>
    <br />
</section>
<br />
<div class="well">
    @using (Html.BeginForm("index", null, FormMethod.Get))
    {
        <div class="row">
            <div class="col-sm-4">
                <div class="input-group">

                    <input type="text"
                           name="filter"
                           value="@ViewBag.filter"
                           class="form-control"
                           style="display: inline"
                           placeholder="Buscar..." />
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="submit"><span class="fa fa-search"></span></button>
                    </span>

                </div>
            </div>
            <div class="pull-right col-lg-1">
                @*<a class="btn btn-success" data-modal="" href="/Persona/Create" id="btnCreate">
                    <span class="glyphicon glyphicon-plus"></span>
                </a>*@
            </div>
        </div>

        <div style="margin-top:17px;">
            @{
                var grid = new WebGrid(
                            canPage: true,
                            rowsPerPage: Model.PageSize,
                            canSort: true,
                            ajaxUpdateContainerId: "grid");

                grid.Bind(Model.Content, rowCount: Model.TotalRecords, autoSortAndPage: false);
                grid.Pager(WebGridPagerModes.All);

                @grid.GetHtml(htmlAttributes: new { id = "grid" },   // id for ajaxUpdateContainerId parameter
            fillEmptyRows: false,
            tableStyle: "table table-bordered table-hover",
            mode: WebGridPagerModes.All,
            columns: grid.Columns(
              grid.Column("IdPersona", "ID"),
              grid.Column("Nombres", "Nombres"),
              grid.Column("Identificacion", "Ci/Rif"),
              grid.Column("Direccion", "Direccion"),
              grid.Column("Telefonos", "Telefonos"),
              grid.Column("FechaRegistro", header: "Fecha", format: @<text>@String.Format("{0:MM/dd/yy}", item.FechaRegistro) </text>),
              grid.Column(header: "Acciones", canSort: false, style: "action",
                format: @<text>
                @Html.Raw("<a data-modal='' href='/Persona/details/" + item.IdPersona + "' id='" + item.IdPersona + "' title='Detalles'> <span class='glyphicon glyphicon-search'> </span> </a>")
                @if (User.IsInRole("Master") == true || User.IsInRole("Supervisor") == true) {
                    @Html.Raw("<a data-modal='' href='/Persona/edit/" + item.IdPersona + "' id='" + item.IdPersona + "' title='Editar'> <span class='glyphicon glyphicon-edit'> </span> </a>")
                    if (User.IsInRole("Analista") == false) {
                    @Html.Raw("<a data-modal='' href='/Persona/delete/" + item.IdPersona + "' id='" + item.IdPersona + "' title='Eliminar'> <span class='glyphicon glyphicon-trash'> </span> </a>")
                        } }
                </text>)

            ));
            }


        </div>
                }
</div>
<div id='myModal' class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>
<script src="~/Content/js/PruebaModal.js"></script>

